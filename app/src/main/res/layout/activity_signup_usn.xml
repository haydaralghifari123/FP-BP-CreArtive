<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".activity_signup_usn">

    <ImageButton
        android:id="@+id/btnBack3"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_marginTop="55dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back25" />

    <TextView
        android:id="@+id/textUsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="117dp"
        android:fontFamily="@font/outfit_bold"
        android:paddingEnd="8dp"
        android:text="Create a \nusername!"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack3" />

    <EditText
        android:id="@+id/editTextUsn"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:fontFamily="@font/outfit_light"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="27dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUsn" />

    <Button
        android:id="@+id/buttonNext3"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/peach"
        android:fontFamily="@font/outfit_semibold"
        android:text="Next"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>